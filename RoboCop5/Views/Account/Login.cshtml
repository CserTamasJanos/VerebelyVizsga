@model RoboCop5.Models.Users
@{
    ViewBag.Title = "Regisztráció";
}
<div class="main" style="margin-top:30px;">

    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                <h2 style="color: white;">"Regisztráció"</h2>

                    @Html.AntiForgeryToken()
                    <h4 style="color: white;">Használja a regisztrált adatait a belépéshez.</h4>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(u => u.UEMAIL, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(u => u.UEMAIL, new { @class = "form-control" })
                            @Html.ValidationMessageFor(u => u.UEMAIL, "", new { @class = "text-danger", @style = "color: white !important" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(u => u.UCODE, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(u => u.UCODE, new { @class = "form-control" })
                            @Html.ValidationMessageFor(u => u.UCODE, "", new { @class = "text-danger", @style = "color: white !important" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button class="btn btn-outline-default my-2 my-sm-0" type="submit">Belépés</button>
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Új felhasználóként regisztrálok", "Register")
                    </p>
                }
            </section>
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
